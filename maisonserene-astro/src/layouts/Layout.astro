---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="MaisonSerene Financial Services - Your trusted financial advisor" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50">
    <!-- Header -->
    <header class="w-full bg-white" style="margin-left: calc(-50vw + 50%); margin-right: calc(-50vw + 50%); width: 100vw;">
      <div class="flex items-end justify-between px-8 max-w-7xl mx-auto" style="padding-top: 2rem; padding-bottom: 0;">
        <!-- Dramatic Left-Aligned Title -->
        <div class="flex items-end space-x-6" style="line-height: 1; margin-bottom: 0;">
          <h1 class="text-8xl md:text-9xl lg:text-[10rem] font-light text-gray-900 tracking-tight" 
              style="font-family: Times, 'Times New Roman', Georgia, serif; line-height: 0.8; margin-bottom: 0;">
            Maison
          </h1>
          <h1 class="text-8xl md:text-9xl lg:text-[10rem] font-light text-gray-900 tracking-tight" 
              style="font-family: Times, 'Times New Roman', Georgia, serif; line-height: 0.8; margin-bottom: 0;">
            Serene
          </h1>
        </div>
        
        <!-- Right-aligned Subheading -->
        <div class="flex items-end" style="margin-bottom: 0.5rem;">
          <p class="text-3xl md:text-4xl font-light text-gray-600 tracking-widest uppercase" 
             style="font-family: Times, 'Times New Roman', Georgia, serif; line-height: 1; margin-bottom: 0;">
            Financial Services
          </p>
        </div>
      </div>
    </header>

    <!-- Navigation -->
    <nav class="w-full shadow-md" style="margin-left: calc(-50vw + 50%); margin-right: calc(-50vw + 50%); width: 100vw; background-color: #1e3a5f;">
      <div class="flex justify-end pr-8 max-w-7xl mx-auto">
        <a href="/" 
           class="px-8 py-5 text-lg font-medium transition-colors text-white hover:text-amber-200 hover:bg-black hover:bg-opacity-10"
           style="font-family: Times, 'Times New Roman', Georgia, serif;">
          Home
        </a>
        <a href="/work-with-me" 
           class="px-8 py-5 text-lg font-medium transition-colors text-white hover:text-amber-200 hover:bg-black hover:bg-opacity-10"
           style="font-family: Times, 'Times New Roman', Georgia, serif;">
          Work with me
        </a>
        <a href="/blog" 
           class="px-8 py-5 text-lg font-medium transition-colors text-white hover:text-amber-200 hover:bg-black hover:bg-opacity-10"
           style="font-family: Times, 'Times New Roman', Georgia, serif;">
          Blog
        </a>
        <a href="/about" 
           class="px-8 py-5 text-lg font-medium transition-colors text-white hover:text-amber-200 hover:bg-black hover:bg-opacity-10"
           style="font-family: Times, 'Times New Roman', Georgia, serif;">
          About
        </a>
      </div>
    </nav>

    <!-- Main Content with 3D Shadow -->
    <main class="bg-gray-50 min-h-screen">
      <div class="max-w-6xl mx-auto bg-white shadow-xl min-h-screen border-x border-gray-200">
        <div class="p-12">
          <slot />
        </div>
      </div>
    </main>

    <script>
      // Add active state to current page
      const currentPath = window.location.pathname;
      const navLinks = document.querySelectorAll('nav a');
      
      navLinks.forEach(link => {
        if (link.getAttribute('href') === currentPath) {
          link.classList.add('text-amber-400', 'bg-black', 'bg-opacity-20', 'border-b-2', 'border-amber-400');
          link.classList.remove('text-white');
        }
      });
    </script>
  </body>
</html>